{
    "name": "chi-teck/trafaret",
    "description": "Trafaret data processor",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.3",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "symfony/polyfill-php80": "^1.16",
        "symfony/validator": "^4.4 || ^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "slevomat/coding-standard": "^6.3",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/var-dumper": "^5.1"
    },
    "suggest": {
        "ext-tidy": "*"
    },
    "autoload": {
        "psr-4": {
            "Trafaret\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Trafaret\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
